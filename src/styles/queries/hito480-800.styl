@media (min-width: 481px) and (max-width: 800px)
  header
    z-index 999
    position fixed
    top 0px
    left 0px
    right: 0
    display flex
    flex-direction column
    justify-content flex-start
    height auto
    & caja1
      display block
      width 100%
      height auto
      margin-bottom 5px
      align-self center
      text-align center
      & #textologo
        display inline-block
        width 75%
      & #idimg
        width 60px
        height 60px
        text-align right
        display inline-block
    & #barraNav
      display block
      margin-top 5px
      width 100%
      height 25px
      & div ul
        display flex
        flex-direction row
        justify-content flex-end
        & li
          margin 0

    & #separador
       padding-top 0
       margin-top 0
  section
    margin-top 120px
    height auto
    & #sideMenu
      position: fixed;
      top 180px
      left 0px
      font-size 10pt
      width 160px
      z-index 999

    & article
      margin-left 120px
      padding 10px
      margin-right 10px
      width 83%
      display flex
      flex-direction row
      flex-wrap wrap
      justify-content flex-start

      & #empresa
        padding-top 5px
        display flex
        flex-direction column
        width 100%
        & #derecho,
        & #mapa
          width 100%
          height 100%
          border-radius 2em
        & #mapa
          width 60vw
          height 60vw
        & #derecho
          display block
          position relative
          float none
          width 100%
          height auto
          margin-bottom 30px
          padding-bottom 5px
          & #acerca,
          & #valores
            width 60vw
            height auto
            border 0.15em solid #ddd
            border-radius 2em
            padding-top 2.5px
            padding-bottom 2.5px
            margin 0px
          & #acerca
            margin-top 5px
          & #valores
            margin-top 5px
            margin-bottom 5px
          & #acerca h1,
          & #valores h1
            margin-top 5px
            font-size 12pt
          & #acerca p,
          & #valores p
            margin-top 10px
            padding-bottom 5px
            font-size 8pt

      & #desplazamiento
        position fixed
        float none
        bottom 54px
        right  0px
        background-color rgba(256,256,256,.8)
        height 30px
        width 80%
        & #barrainferior
          width 100%
          height 30px
          display flex
          flex-direction row
          justify-content center
          text-align center
        & div a span
          width 30px
          height 100%
          padding 0
          font-size 30px
        & div pag
          line-height 30px
          font-size 12pt
          width 120px
          padding 0

      & .celda
        display block
        width 100px
        & .desc,
        & .nom
          width 90px
        & .img
          width 90px
          & img
            width 90px
            height 90px
      & #contacto
        width 64vw
        height 90%
        & #datos
          height 90%
          padding-bottom 25px
          & h1
            margin-bottom 20px
            font-size 16pt
          & h2
            font-size 14pt
          & label
            font-size 11pt
          & span
            font-size 11pt
          & #direccionC
            display none
          & #direccionS
            display block
            margin 20px 0 10px 25px

  footer
    position fixed
    bottom 0
    right 0
    width 100vw
    font-size 10pt
    height auto
